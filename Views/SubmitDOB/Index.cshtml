
<div class="text-center">
    <h1>Sun Sign Calculator</h1>
    
    <div class="mx-auto form-control text-center" style="width: 300px; height:300px; border: 1px solid #ccc;">
        <div class="my-5">
            <form method="post" asp-controller="SubmitDOB" asp-action="SubmitDOB">
                <h3 class="text-center">I was born...</h3>
                <input name="DOB" type="date" class="form-control text-center">
                <br>
                <button type="submit" class="btn btn-outline-primary">Show Me My Sun Sign</button>
            </form>
        </div>
    </div>
</div>